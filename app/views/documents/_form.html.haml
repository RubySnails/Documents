= nested_form_for @document do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :document_type_id
    = f.collection_select :document_type_id, DocumentType.all, :id, :name

  = render 'document_items', f: f
  .actions
    = f.submit 'Save'
